<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="console_index" pattern="/" host="console.%domain%">
        <default key="_controller">ManhattanConsoleBundle:Console:index</default>
    </route>

    <import resource="@ManhattanConsoleBundle/Resources/config/routing/user.xml" host="console.%domain%" />

    <import resource="@FOSUserBundle/Resources/config/routing/security.xml" host="console.%domain%" />
    <import resource="@FOSUserBundle/Resources/config/routing/profile.xml" prefix="/profile" host="console.%domain%" />
    <route id="fos_user_profile_show" pattern="/profile">
        <default key="_controller">FOSUserBundle:Profile:show</default>
        <requirement key="_method">GET</requirement>
    </route>
    <import resource="@FOSUserBundle/Resources/config/routing/resetting.xml" prefix="/forgot" host="console.%domain%" />
    <import resource="@FOSUserBundle/Resources/config/routing/change_password.xml" prefix="/profile" host="console.%domain%" />

</routes>
