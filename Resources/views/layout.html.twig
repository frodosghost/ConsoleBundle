{% extends 'MopaBootstrapBundle::layout.html.twig' %}

{% block head_style %}
{% stylesheets filter='less,cssembed,?yui_css' 
       '@ManhattanConsoleBundle/Resources/public/less/bootstrap-setup.less'
       '@ManhattanConsoleBundle/Resources/public/less/console.less'
%}
<link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
{% endstylesheets %}
{% endblock head_style %}

{% block navbar %}
    {{ mopa_bootstrap_navbar('consoleNavbar') }}
{% endblock navbar %}

{% block title %}Manhattan Management Console{% endblock %}

{% block headline %}Manhattan Management Console{% endblock %}

{% block foot_script %}
	{% block main_javascript %}
		{%- javascripts
	    	'@ManhattanConsoleBundle/Resources/public/js/mootools-core-1.4.5-full-nocompat.js'
	    	'@ManhattanConsoleBundle/Resources/public/js/mootools-more-1.4.0.1.js'
	    	filter="?yui_js"
	    	output="js/main.js"
	    %}
		<script type="text/javascript" src="{{ asset_url }}"></script>
		{% endjavascripts %}
	{% endblock main_javascript %}

	{% block page_javascript %}
		{# Javascript specific to pages is included in here. #}
	{% endblock page_javascript %}
{% endblock foot_script %}

{% block footer %}
<p>&copy; <a href="http://www.frodosghost.com" target="_blank">Manhattan Management Console</a> 2011</p>
{% endblock footer %}
