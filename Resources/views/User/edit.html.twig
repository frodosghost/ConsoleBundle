{% extends "ManhattanConsoleBundle::layout.html.twig" %}

{% block content %}
<form action="{{ path('console_users_update', { 'id': entity.id }) }}" class="form-horizontal well" method="post" {{ form_enctype(edit_form) }} novalidate>
  <fieldset>  
    {{ form_widget(edit_form) }}
    <div class="form-actions">
        <a href="{{ path('console_users') }}" class="btn">Back to the list</a>
        <button type="submit" class="btn btn-primary">Edit</button>
</form>
        <form action="{{ path('console_user_delete', { 'id': entity.id }) }}" class="actions-delete" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_row(delete_form.id) }}
            {{ form_rest(delete_form) }}
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</fieldset>
{% endblock %}
