<!DOCTYPE html>

{% block html_tag %}
<html lang="en">
{% endblock html_tag %}

{% block head %}
<head>
    <meta charset="UTF-8" />
    {% block head_style %}
    {% stylesheets filter='less,cssembed,cssrewrite,?yui_css' output='css/screen.css'
        '@ManhattanConsoleBundle/Resources/public/css/normalize.css'
        '@ManhattanConsoleBundle/Resources/public/css/buttons.css'
        '@ManhattanConsoleBundle/Resources/public/css/forms.css'
        '@ManhattanConsoleBundle/Resources/public/css/grids.css'
        '@ManhattanConsoleBundle/Resources/public/css/menus.css'
        '@ManhattanConsoleBundle/Resources/public/css/tables.css'
        '@ManhattanConsoleBundle/Resources/public/less/console.less'
    %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
    {% endstylesheets %}
    {% endblock head_style %}

    <!-- Set the viewport width to device width for mobile -->
    <meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1, maximum-scale=1.0" />
    <meta name="handheldfriendly" content="true" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />

    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" type="image/x-icon" />

    {% block head_script %}
        {# Overwrite this block to add your own js here, to get them generated into final files #}
    {% endblock head_script %}

    <title>{% block title %}Manhattan Management Console{% endblock title %}</title>
    {% block head_bottom %}
    {% endblock head_bottom %}
</head>
{% endblock head %}

{% block body_tag %}
<body>
{% endblock body_tag %}

    <div class="{% block container_class %}container{% endblock container_class %}">
        {% block navigationbar %}
            {{ knp_menu_render('mainmenu') }}
            {{ knp_menu_render('usermenu') }}
        {% endblock navigationbar %}

        {% block content %}
            {{ block('fos_user_content') }}
        {% endblock %}

        <footer>
            {% block footer %}
            <p>&copy; <a href="http://www.frodosghost.com" target="_blank">Manhattan Management Console</a></p>
            {% endblock footer %}
        </footer>
    </div>

</body>
</html>
