{% extends 'ManhattanConsoleBundle::layout.html.twig' %}

{% block title %}Forgotten Password{% endblock %}
{% block page_header %}{% endblock %}

{% block fos_user_content %}
<div class="row-fluid">
    <div class="span12">
        <div class="span3"></div>
        <div class="span6">
            <div class="header">
                <h1>Forgot your password?</h1>
                <p>Please enter your email address</p>
            </div>

            <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="form-stacked well" novalidate>
            <div>
                {% if invalid_username is defined %}
                    <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}</p>
                {% endif %}

                <div>
                    <label for="username">{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}</label>
                    <input type="text" id="username" name="username" required="required" placeholder="{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}" />
                </div>

            </div>
            <div>
                <input class="btn primary" type="submit" value="{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}" />
            </div>
            </form>
        </div>
        <div class="span3"></div>
    </div>
</div>

{% endblock fos_user_content %}
