{% extends "ManhattanConsoleBundle:Console:template.html.twig" %}

{% block title %}Console: Profile | Change Password{% endblock title %}
{% block template_title %}Console: Change Password{% endblock template_title %}
{% block breadcrumbs %}<li><a href="{{ path('console_index', { 'subdomain': subdomain }) }}">Console</a></li><li class="current"><a href="{{ path('fos_user_change_password', { 'subdomain': subdomain }) }}">Change Password</a></li>{% endblock breadcrumbs %}

{% block template_console %}

<div class="pure-g-r">
    <div class="pure-u-3-4">

        <div class="l-box">

            <form action="{{ path('fos_user_change_password', { 'subdomain': subdomain }) }}" {{ form_enctype(form) }} method="POST" class="pure-form pure-form-stacked" novalidate>

                {{ form_widget(form) }}

                <div class="form-actions">
                    <a href="{{ path('fos_user_profile_show', { 'subdomain': subdomain }) }}" class="pure-button">Back to Profile</a>
                    <input type="submit" class="pure-button pure-button-primary" value="{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}" />
                </div>
            </form>

        </div>

    </div>

    <div class="pure-u-1-4">
        <div class="l-box">

        </div>
    </div>
</div>

{% endblock template_console %}
